{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Code Coverage",
            "detail": "Generate code coverage report.",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pytest",
                "--cov",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}