$mon-height: 16;

DEBMode {

    layout: vertical;
    background: $boost;

    height: $mon-height;
    width: 30;
    margin: 1;
    padding: 0 1;

    border: round grey;

    border-title-color: grey;
    border-title-style: bold;

}

DEBCommand {

    layout: grid;
    background: $boost;

    grid-size: 2 3;
    grid-rows: 1fr;
    grid-columns: 1fr;
    grid-gutter: 1 2;

    height: 15;
    width: 1fr;
    margin: 1;
    padding: 1 1;

    border: round grey;

    border-title-color: grey;
    border-title-style: bold;

}

DEBCommand #btn-deb-immediate-on {
    column-span: 2;
    width: 1fr;
    background: #d70000 50%;
}

DEBCommand Button {
    background: $panel;
    height: 5;
    width: 1fr;
}

AEBState {

    layout: grid;
    grid-size: 8 5;
    grid-rows: 2;
    grid-gutter: 0;

    background: $boost;

    height: $mon-height;
    width: 84;
    margin: 1;
    padding: 0 1;

    border: round grey;

    border-title-color: grey;
    border-title-style: bold;

    OnOffLed {
        text-align: center;
        width: 1fr;
        margin: 0;
    }

    Label {
        text-align: center;
        width: 1fr;
    }
}

AEBCommand {

    layout: vertical;
    background: $boost;

    height: 15;
    width: 2fr;
    margin: 1;
    padding: 0 1;

    border: round grey;

    border-title-color: grey;
    border-title-style: bold;

    Label {
        border: tall grey 50%;
        text-align: center;
        height: 3;
        width: 15;
        margin: 0;
    }

    Button {
        height: 3;
        margin: 0 1;
        padding: 0;
    }

}

DtcInMod {
    layout: grid;

    grid-size: 9 8;
    grid-rows: 1;
    grid-gutter: 1;

    height: $mon-height;
    width: 1fr;
    margin: 1;
    padding: 0 1;

    background: $boost;

    border: round grey;

    border-title-color: grey;
    border-title-style: bold;

    .two-cols {
        column-span: 2;
        text-align: center;
        background: $boost 0%;
        width: 1fr;
    }

    .one-col {
        text-align: center;
        background: grey 25%;
        width: 1fr;
    }

    .disabled {
        background: $boost 25%;
    }

    .footer {
        background: $boost 0%;
        width: 1fr;
        offset-y: -1;
    }

    .sub-header {
        background: $boost 0%;
        width: 1fr;
        grid-gutter: 0;
    }

    .header {
        border-right: vkey grey;
        width: 1fr;
    }

    Sparkline {
        column-span: 8;
        offset-y: -1;
    }

    #lbl-frame-errors {
        offset-y: -1;
    }

    #frame-errors > .sparkline--max-color {
        color: red;
    }
    #frame-errors > .sparkline--min-color {
        color: $boost;
    }
}

GeneralCommand {

    background: $boost;

    layout: grid;

    grid-size: 1 3;
    grid-rows: 1fr;
    grid-columns: 1fr;
    grid-gutter: 1 2;

    height: 15;
    width: 1fr;
    margin: 1;
    padding: 1 1;

    border: round grey;

    border-title-color: grey;
    border-title-style: bold;

    Button {
        width: 1fr;
    }
}

InputStringDialog {
    align: center middle;
}

InputStringDialog > Vertical {
    border: thick $primary 50%;
    width: 50%;
    height: 16;
    background: $boost;
    Label {
        text-style: bold;
        margin: 2 4;
    }
    Input {
        margin: 2 2;
    }
    Button {
        margin: 0 2;
    }
    Horizontal {
        width: 100%;
        align: center top;
        #btn-dialog-yes {
            margin-right: 2;
        }
    }
}

OnOffLedWithLabel {
    layout: horizontal;
    height: 1;
    padding: 0;
    margin: 1;  # use this to set margin between the widgets
}
OnOffLedWithLabel Label {
    padding: 0;
    width: 20;
    text-align: left;
    dock: left
}
OnOffLedWithLabel OnOffLed {
    padding: 0;
    width: 2;
    text-align: center;
    dock: right
}

InfoBar {
    height: 2;
    dock: bottom;
    Label {
        margin: 0 1 0 0;
    }
    .status {
        border-right: vkey grey;
    }
}
