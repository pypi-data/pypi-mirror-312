/* CategoryScaleWidget Styling */
CategoryScaleWidget {
    border: none;
    width: 100%;
    padding: 0;
    overflow: auto;
    height: 90;
}

/* CategoryWidget Styling */
CategoryWidget {
    border: #5e3a2e;
    width: 100%;
    padding: 0;
}

/* SelectCategoryWidget Styling */
SelectCategoryWidget {
    border: #5e3a2e 20%;
    background: #5e3a2e 20%;
    height: 40;
    width: 100%;
    padding: 1;
}

/* SelectScaleWidget Styling */
SelectScaleWidget {
    border: #5e3a2e;
    width: 100%;
    padding: 1;
    
}


/* ScaleWidget Styling */
ScaleWidget {
    border: #5e3a2e;
    width: 100%;
    padding: 1;
}


/* Button Container for Horizontal Layout */
.button-container {
    layout: horizontal;
    width: 100%;
    margin-top: 1;
    border: green
}

/* Full Width for Select, Input, and TextArea */
Select{ 
    width: 100%;
    margin: 1 0;
    border: #5e3a2e;
    
}

Select:focus{
    border: #9ed9de
}



Input {
    width: 100%;
    margin: 1 0;
    border: #5e3a2e
}

Input:focus {
    border: #9ed9de;
}


TextArea {
    width: 100%;
    height: 15;
    margin: 1 0;
    border: #5e3a2e
}

TextArea:focus {
    border: #9ed9de;
}


/* Loading Indicator Visibility */
#loading-indicator, #scale-loading-indicator {
    visibility: hidden;
    margin: 1 0;
}

#loading-indicator.visible, #scale-loading-indicator.visible {
    visibility: visible;
}
