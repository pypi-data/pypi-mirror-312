<odoo>
    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field
            name="name"
        >res.config.settings.view.form.inherit.sale (in sale_order_sign_oca)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@name='quotation_order_setting_container']"
                position="after"
            >
                <h2>Sign</h2>
                <div
                    class="row mt16 o_settings_container"
                    id="sale_order_sign_oca"
                    groups="sign_oca.sign_oca_group_admin"
                >
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        id="sale_order_sign_oca_template"
                    >
                        <div class="o_setting_left_pane">
                            <field name="group_sale_order_sign_oca" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_sale_order_sign_oca" />
                            <div class="text-muted">
                            Defines the template that will be used to generate the sales order sign request
                            </div>
                            <div
                                class="content-group"
                                attrs="{'invisible': [('group_sale_order_sign_oca', '=', False)]}"
                            >
                                <div class="mt16">
                                    <label
                                        for="sale_order_sign_oca_template_id"
                                        class="o_light_label"
                                    />
                                    <field
                                        name="sale_order_sign_oca_template_id"
                                        class="oe_inline"
                                    />
                                </div>
                                <div class="mt8">
                                    <button
                                        name="%(sale_order_sign_oca.sale_order_sign_template_action)d"
                                        icon="fa-arrow-right"
                                        type="action"
                                        string="Sale Orders Sign Templates"
                                        class="btn-link"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        attrs="{'invisible': [('group_sale_order_sign_oca','=',False)]}"
                    >
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">State for Generation</span>
                            <div class="text-muted">
                                    Defines the state in which the sign request will be generated.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field
                                        name="sale_order_sign_oca_state"
                                        class="o_light_label"
                                        widget="radio"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
