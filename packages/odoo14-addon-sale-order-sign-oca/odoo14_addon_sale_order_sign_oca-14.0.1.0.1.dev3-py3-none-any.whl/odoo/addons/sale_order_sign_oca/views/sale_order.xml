<odoo>

    <record model="ir.ui.view" id="sale_order_form_view">
        <field name="name">sale.order.form (in sale_order_sign_oca)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field
            name="groups_id"
            eval="[(6, 0, [ref('sign_oca.sign_oca_group_user')])]"
        />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    type="object"
                    name="action_view_sign_requests"
                    class="oe_stat_button"
                    icon="fa-file-text-o"
                    attrs="{'invisible': [('sign_request_count', '=', 0)]}"
                >
                    <field
                        name="sign_request_count"
                        widget="statinfo"
                        string="Sign Requests"
                    />
                </button>
            </div>
        </field>
    </record>

</odoo>
